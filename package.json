{
  "name": "lead_stories_v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "rm -rf ./dist",
    "start": "parcel serve --open --no-hmr --port=3001 *.html",
    "prebundle": "rm -rf ./dist",
    "bundle": "parcel build --no-minify *.html",
    "postbundle": "rm dist/*.svg",
    "preghpages": "rm -rf ./docs",
    "ghpages": "parcel build --no-minify --public-url=./ --out-dir=./docs *.html",
    "postghpages": "rm docs/*.svg",
    "prebuild": "rm -rf ./build",
    "build": "parcel build --no-source-maps --out-dir=./build *.html",
    "postbuild": "rm build/*.svg",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clear": "rm -rf ./build ./dist ./docs"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 120
  },
  "svgSpriteOptions": {
    "include": [
      "icons/**/*"
    ],
    "exclude": [
      "img"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "css-mqpacker": "^7.0.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-svg-sprite": "^1.3.0",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.7.0"
  }
}
